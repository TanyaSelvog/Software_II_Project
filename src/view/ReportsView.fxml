        <Label layoutX="447.0" layoutY="74.0" text="Reports">
            <font>
                <Font name="Verdana Bold" size="24.0" />
            </font>
        </Label>
        <HBox alignment="TOP_CENTER" layoutX="82.0" layoutY="230.0" prefHeight="100.0" prefWidth="836.0" spacing="50.0">
            <children>
                <Button fx:id="monthlyCust" mnemonicParsing="false" onAction="#onMonthlyBtn" text="Monthly Customers Report">
                <font>
                    <Font name="Verdana" size="18.0" />

                </font></Button>
                <Button fx:id="contact" mnemonicParsing="false" onAction="#onContactBtn" text="Contact Schedule Report">
